<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Bootstrap + HTMX + Slim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body class="p-4">
    <div class="container">

        <!-- Row with 2 columns -->
        <div class="row mb-4">
            <div class="col-6 border p-3">
                <button class="btn btn-primary" hx-get="/load/1" hx-target="#col1" hx-swap="innerHTML">
                    Load Col 1
                </button>
                <div id="col1" class="mt-2"></div>
            </div>
            <div class="col-6 border p-3">
                <button class="btn btn-primary" hx-get="/load/2" hx-target="#col2" hx-swap="innerHTML">
                    Load Col 2
                </button>
                <div id="col2" class="mt-2"></div>
            </div>
        </div>

        <!-- Row with 3 columns -->
        <div class="row">
            {% for i in 3..5 %}
                <div class="col-4 border p-3">
                    <button class="btn btn-secondary" hx-get="/load/{{ i }}" hx-target="#col{{ i }}" hx-swap="innerHTML">
                        Load Col {{ i }}
                    </button>
                    <div id="col{{ i }}" class="mt-2"></div>
                </div>
            {% endfor %}
        </div>

    </div>
</body>
</html>
